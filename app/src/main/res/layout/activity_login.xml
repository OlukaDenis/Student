<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Web Info-Net limited"
            android:layout_margin="16dp"
            android:textColor="#222"
            android:textAllCaps="true"
            android:textSize="32dp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/images"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:id="@+id/internee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Internees 2018"
            android:padding="16dp"
            android:onClick="goInternee"
            android:textSize="20sp"
            android:textColor="#222"
            android:background="#b3d9ff"/>

        <TextView
            android:id="@+id/courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Courses available"
            android:padding="16dp"
            android:textSize="20sp"
            android:onClick="goCourses"
            android:textColor="#222"
            android:background="#e0e0eb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Staff"
            android:onClick="goStaff"
            android:padding="16dp"
            android:textSize="20sp"
            android:textColor="#222"
            android:background="#b3d9ff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About WIN"
            android:padding="16dp"
            android:textSize="20sp"
            android:textColor="#222"
            android:onClick="goAbout"
            android:background="#e0e0eb"/>
    </LinearLayout>


</ScrollView>